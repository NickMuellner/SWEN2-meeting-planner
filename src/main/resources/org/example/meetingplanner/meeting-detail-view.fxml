<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="org.example.meetingplanner.view.MeetingDetailView">
    <children>
        <WebView fx:id="map" minHeight="10.0" minWidth="10.0" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS"/>
        <TabPane fx:id="tabPane" maxHeight="350.0" minHeight="300.0" minWidth="300.0" prefHeight="300.0"
                 tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <tabs>
                <Tab text="General">
                    <content>
                        <fx:include source="meeting-create-view.fxml" HBox.hgrow="ALWAYS"/>
                    </content>
                </Tab>
                <Tab text="Route">
                    <content>
                        <VBox>
                            <fx:include source="meeting-logs-view.fxml"/>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </VBox>
                    </content>
                </Tab>
                <Tab onSelectionChanged="#calcProperties" text="Misc">
                    <content>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="60.0">
                            <children>
                                <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="150.0">
                                    <children>
                                        <Label text="Popularity"/>
                                        <TextField fx:id="popularity" editable="false"/>
                                    </children>
                                </VBox>
                                <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="150.0">
                                    <children>
                                        <Label text="Child friendliness"/>
                                        <TextField fx:id="childFriendliness" editable="false"/>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
    <padding>
        <Insets top="30.6"/>
    </padding>
</VBox>
