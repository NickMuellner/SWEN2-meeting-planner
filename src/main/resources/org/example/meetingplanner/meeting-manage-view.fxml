<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.meetingplanner.view.MeetingManageView">
    <children>
            <VBox>
                <children>
                    <Label text="Title" />
                    <TextField fx:id="title" />
                </children>
            </VBox>
      <HBox spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
                  <VBox HBox.hgrow="ALWAYS">
                      <children>
                          <Label text="From" />
                  <DatePicker fx:id="fromDate" />
                  <Spinner fx:id="fromTime" editable="true" />
                      </children>
                  </VBox>
                  <VBox HBox.hgrow="ALWAYS">
                      <children>
                          <Label text="To" />
                  <DatePicker fx:id="toDate" />
                  <Spinner fx:id="toTime" editable="true" />
                      </children>
                  </VBox>
         </children>
      </HBox>
            <VBox>
                <children>
                    <Label text="Agenda" />
            <TextArea fx:id="agenda" prefHeight="100.0" />
                </children>
            </VBox>
      <VBox>
         <children>
            <Label text="Notes" />
            <ListView fx:id="notes" prefHeight="100.0" />
            <HBox spacing="5.0">
               <children>
                  <TextField fx:id="newNote" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#addNote" text="+" />
                  <Button mnemonicParsing="false" onAction="#deleteNote" text="-" />
               </children>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
      <Button mnemonicParsing="false" onAction="#saveMeeting" text="Save" />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
