<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.meetingplanner.view.MeetingNoteCreateView">
    <children>
        <HBox alignment="TOP_CENTER" spacing="60.0">
            <children>
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Date / Time" />
                                <DatePicker fx:id="datetime" prefWidth="150.0" />
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Difficulty" />
                                <TextField fx:id="difficulty" />
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Duration (h)" />
                                <TextField fx:id="duration" />
                            </children>
                        </VBox>
                    </children>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </VBox>
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <VBox>
                            <children>
                                <Label text="Comment" />
                                <TextField fx:id="comment" />
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Distance (km)" />
                                <TextField fx:id="distance" />
                            </children>
                        </VBox>
                        <VBox>
                            <children>
                                <Label text="Rating" />
                                <TextField fx:id="rating" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </HBox>
        <Button mnemonicParsing="false" onAction="#saveTourLog" text="Save">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>
